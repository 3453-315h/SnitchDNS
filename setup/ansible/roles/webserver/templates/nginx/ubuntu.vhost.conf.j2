server {
    listen 80;
    server_name {{ web.domain }};
    return 301 https://$server_name$request_uri;
}

server {
    listen 443 ssl http2;
    server_name {{ web.domain }};

    ssl_certificate {{ snitch.destination }}/data/config/http/ssl.crt;
    ssl_certificate_key {{ snitch.destination }}/data/config/http/ssl.pem;

    ssl_protocols TLSv1.2;

    location / {
        include proxy_params;
        proxy_pass http://{{ web.bind_host }}:{{ web.bind_port }}/;
    }
}